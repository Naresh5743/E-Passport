@model ScheduleAppointment; 
@{
    ViewData["Title"] = "Schedule Appointment";
}
<div class="row">
    <div class="col-md-4">
        <form asp-controller="ScheduleAppointment" asp-action="AddAppointment" method="post">
            <div class="form-group">
                <label asp-for="MonthName" class="control-label"></label>
                <input asp-for="MonthName" class="form-control" placeholder="Month name" />
                <span asp-validation-for="MonthName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="AvailableDays" class="control-label"></label>
                <input asp-for="AvailableDays" class="form-control" placeholder="Available days" />
                <span asp-validation-for="AvailableDays" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="TimeSlots" class="control-label"></label>
                <input asp-for="TimeSlots" class="form-control" placeholder="Time slots" />
                <span asp-validation-for="TimeSlots" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Add Appointment" class="btn-primary btn" />
            </div>
        </form>
    </div>
</div>